{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "lib": ["es2018", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "compiled",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
