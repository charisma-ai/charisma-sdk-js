{
  "name": "@charisma-ai/sdk",
  "version": "3.6.0",
  "description": "Charisma.ai SDK for Javascript (browser)",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.module.js",
  "typings": "dist/src/index.d.ts",
  "sideEffects": false,
  "repository": "https://github.com/charisma-ai/charisma-sdk-js",
  "author": "Charisma Entertainment Ltd <hello@charisma.ai> (https://charisma.ai)",
  "license": "MIT",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build:non-umd": "microbundle --format modern,es,cjs --compress false",
    "build:umd": "microbundle --format umd --name CharismaSDK --external none --alias httpie=./node_modules/httpie/xhr/index.js --amd-name '@charisma-ai/sdk'",
    "build": "yarn run build:non-umd && yarn run build:umd",
    "cm": "git-cz",
    "lint": "eslint --fix --ext js,ts,tsx .",
    "prebuild": "rimraf dist",
    "prepublish": "yarn run build",
    "postinstall": "patch-package",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.2",
    "colyseus.js": "^0.14.13",
    "eventemitter3": "^4.0.7",
    "isomorphic-unfetch": "^3.1.0",
    "jwt-decode": "^3.1.2",
    "p-queue": "^6.6.2",
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0",
    "query-string": "^7.1.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "commitizen": "^4.2.5",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.20.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "microbundle": "^0.15.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.3",
    "typescript": "^4.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "decentralandLibrary": {
    "main": "dist/index.umd.js"
  }
}
