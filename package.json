{
  "name": "@charisma-ai/sdk",
  "version": "0.7.3",
  "description": "Charisma.ai SDK for Javascript (browser)",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/charisma-ai/charisma-sdk-js",
  "author": "To Play For",
  "license": "MIT",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production tsc && rollup -c && rimraf compiled",
    "cm": "git-cz",
    "lint": "tslint src/*.ts",
    "prebuild": "rimraf dist",
    "precommit": "lint-staged",
    "prepublish": "yarn run build",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@types/socket.io-client": "^1.4.32",
    "eventemitter3": "^3.1.0",
    "jwt-decode": "^2.2.0",
    "socket.io-client": "^2.2.0"
  },
  "devDependencies": {
    "@types/jwt-decode": "^2.2.1",
    "commitizen": "^3.0.7",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "rimraf": "^2.6.3",
    "rollup": "^1.5.0",
    "rollup-plugin-babel-minify": "^7.0.0",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-strip": "^1.2.1",
    "rollup-plugin-uglify": "^6.0.2",
    "semantic-release": "^15.13.3",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3333"
  },
  "lint-staged": {
    "linters": {
      "src/**/*.ts": [
        "tslint --fix",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
