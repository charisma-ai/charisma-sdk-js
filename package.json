{
  "name": "@charisma-ai/sdk",
  "version": "0.4.2",
  "description": "Charisma.ai SDK for Javascript (browser)",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "browser": "dist/umd/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/charisma-ai/charisma-sdk-js",
  "author": "To Play For",
  "license": "MIT",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production tsc && rollup -c && rimraf compiled",
    "cm": "git-cz",
    "lint": "tslint src/*.ts",
    "prebuild": "rimraf dist",
    "precommit": "lint-staged",
    "prepublish": "yarn run build",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@types/socket.io-client": "^1.4.32",
    "eventemitter3": "^3.1.0",
    "socket.io-client": "^2.2.0"
  },
  "devDependencies": {
    "commitizen": "^3.0.5",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.4",
    "rollup-plugin-babel-minify": "^6.2.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-strip": "^1.2.0",
    "rollup-plugin-uglify": "^6.0.0",
    "semantic-release": "^15.12.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.1"
  },
  "lint-staged": {
    "linters": {
      "src/**/*.ts": [
        "tslint --fix",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
